{
  "name": "taxblock-autotally-ai",
  "private": true,
  "version": "0.2.1",
  "description": "AutoTallyAI - Automated Accounting & Tally Integration",
  "author": "Suraj Suryawanshi",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:dist": "vite build && electron-builder --win"
  },
  "build": {
    "appId": "com.autotally.ai",
    "productName": "AutoTallyAI",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "TallyAiLogo00.ico"
    ],
    "directories": {
      "output": "release_v14"
    },
    "win": {
      "target": "nsis",
      "icon": "TallyAiLogo00.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.4.1",
    "uuid": "^13.0.0",
    "xlsx": "latest"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}